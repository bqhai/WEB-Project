@{
    ViewBag.Title = "HienThiThuongHieu";
}
@using QLMuaBanNem.Models
@model List<ThuongHieu>
<div>
    <ul class="nav flex-column">
        <li>
            <h5>DANH MỤC SẢN PHẨM</h5>
        </li>
        @foreach (var item in Model)
        {
            <li class="nav-item bg-info dropdown">
                <p style="color: #ffd800">@item.TenThuongHieu</p>
                @Html.Action("HienThiLoai", "Home", new { ms = @item.MaThuongHieu })
            </li>
        }
    </ul>
</div>
